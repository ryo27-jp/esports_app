<div class="container my-5">
  <div class="row">
    <div class="col-sm-8 offset-sm-2 col-12">
      <div>
        <% breadcrumb :division, @division %>
      </div>
      <div class="card mb-3 border-0">
        <div class="row g-0">
          <div class="col-md-4">
            <% if @division.image.attached? %>
              <%= image_tag @division.image, class:"w-100 h-100 rounded-3"%>
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <div class="card-title">
                <div>Name</div>
                <div class="text-name"><%= @division.name%></div>
              </div>
              <div>
                <% @division.tags.each do |tag| %>
                  <span class="badge rounded-pill bg-success"><%= tag.title %></span>
                <% end %>
              </div>
              <div class="card-text border-top pt-3 mt-3">
                <div class="mb-2">
                  <%= Division.human_attribute_name(:description) %>
                </div>
                <%= @division.description %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <p class="headline-large mt-4">MEMBER</p>
      <div class="row mt-4">
        <% if @division.members.present? %>
          <% @division.members.each do |member| %>
            <div class="col-6 col-md-3">
              <%= link_to member_path(member), class:"card mb-4 text-decoration-none border-0 " do %>
                <% if member.image.attached? %>
                  <%= image_tag member.image, class:"rounded-circle", size:150%>
                <% else %>
                  <%= image_pack_tag 'no_image.gif', class:"card-img-top" %>
                <% end %>
                <div class="card-body">
                  <p class="card-text"><%= member.name %></p>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= link_to "削除", division_path, method: :delete %>
        <%= link_to "編集", edit_division_path %>
        <%= link_to "メンバー新規登録", new_division_member_path(@division) %>
      </div>
    </div>
  </div>
</div>

